{% extends 'base.html.twig' %}

{% block body %}
    <div class="top">
    <div class="body-top">
        <div class="content">
            <div class="col-sm-12 weather-text-container">
                <div class="onethird align-left">
                    <h3 class="weather-text">{{ weather.weather[0].main }}</h3>
                </div>
                <div class="onethird align-center">
                    <img class="weather-icon" src="http://openweathermap.org/img/w/{{ weather.weather[0].icon }}.png"/>
                </div>
                <div class="onethird align-right">
                    <h2 class="weather-text">{{ (weather.main.temp - 273.1)|slice(0, 2) }}</h2>Â°C
                </div>
            </div>
            <div class="col-sm-12 ">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-8">
                    <div class=" message-container">
                        <p class="message">{{ advice }}</p>
                    </div>
                    <div class="message-button-container">
                        <div class="accept">V</div><div class="decline">X</div>
                    </div>
                </div>
                <div class="col-sm-2">
                </div>
            </div>
        </div>
    </div>
    </div>

    <div class="bottom">
        <div class="body-bottom">
            <div class="col-sm-12">
                <div class="col-sm-2"></div>
                <div class="col-sm-8 date-container">
                    <div class="day-txt">
                        {{ "now"|date("l") }}
                    </div>
                    <div class="day-int">
                        {{ "now"|date("d") }}
                    </div>
                </div>
                <div class="col-sm-2"></div>
            </div>
            <div class="col-sm-12">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <table class="table-container">
                        <tbody>
                        {% for event in events %}
                            <tr class='table-row clickable-row' data-href='{{ path('event_show', { 'id': event.id }) }}'>
                                <td>{% if event.startDate %}{{ event.startDate|date('H:i') }}{% endif %}</td>
                                <td>{{ event.description }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="col-sm-2"></div>
            </div>
        </div>
    </div>
{% endblock %}