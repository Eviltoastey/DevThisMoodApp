{% extends 'base.html.twig' %}

{% block body %}
<div class="full">
    <h1>Event</h1>

    <div class="col-sm-12">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <table class="table-container">
                <tbody>
                    <tr class='table-row clickable-row' data-href='{{ path('event_show', { 'id': event.id }) }}'>
                        <td>{% if event.startDate %}{{ event.startDate|date('H:i') }}{% endif %}</td>
                        <td>{{ event.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-sm-2"></div>
    </div>

    <ul>
        <li>
            <a href="{{ path('event_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('event_edit', { 'id': event.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
